{
    "extends": "airbnb-base",
    "plugins": [
        "chai-friendly"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "mocha": true,
        "es6": true
    },
    "rules": {
        "no-unused-expressions": "off",
        "chai-friendly/no-unused-expressions": 2,
        "comma-dangle": "off"
    }
}
