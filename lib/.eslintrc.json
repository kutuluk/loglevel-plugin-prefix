{
    "extends": "airbnb-base/legacy",
    "env": {
        "browser": true,
        "amd": true,
        "es6": false
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-param-reassign": "off",
        "prefer-rest-params": "off",
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "func-names": "off",
	"indent": "off",
        "no-tabs": "off",
	"no-underscore-dangle":"off",
	"space-before-function-paren":"off",
	"space-before-blocks":"off",
	"space-infix-ops":"off",
	"semi":"off",
	"block-spacing":"off",
	"spaced-comment":"off",
	"space-in-parens":"off",
	"no-mixed-spaces-and-tabs":"off"
    }
}
